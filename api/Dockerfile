FROM python:3.12

WORKDIR /app

# ------------------------
# Install dependencies
# ------------------------
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# ------------------------
# Copy source code
# ------------------------
COPY src/ ./src

# ------------------------
# Run API
# ------------------------
CMD ["uvicorn", "src.main:app", "--host", "0.0.0.0", "--port", "8000"]
